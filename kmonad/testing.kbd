)

(defsrc
  lalt
  ralt
  tab
  grv
  l
)

(defalias ale (tap-macro-release lalt esc))

(defalias
  lal (tap-hold-next-release 200 l lalt)
)

(deflayer out
  lalt
  lalt
  tab
  (release-only lalt)
  @lal
)
