{
  "manifest_version": 2,
  "name": "Tab Search",
  "version": "1.0",
  "description": "Search and switch between open tabs quickly",
  
  "permissions": [
    "tabs",
    "activeTab",
    "history"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["fuse.min.js", "content.js"],
      "css": ["overlay.css"]
    }
  ],
  
  "commands": {
    "open-tab-search": {
      "suggested_key": {
        "default": "Alt+Space"
      },
      "description": "Open tab search"
    }
  },
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}